				</Anchors>
				<Layers>
					<Layer level="OVERLAY">
						<Texture name="$parentTexture" parentKey="Texture" atlas="flightpath" setAllPoints="true"/>
					</Layer>
				</Layers>
				<Scripts>
					<OnEnter function="KrowiAF_AchievementButtonExtraIcon_OnEnter"/>
					<OnLeave>
						GameTooltip:Hide();
					</OnLeave>
				</Scripts>
			</Frame>
